<h1>Edit Shipping Address</h1>


<h3>Current Shipping Address:</h3>
<p>
  <%= @shipping_address.full_name %><br>
  <%= @shipping_address.address %><br>
  <%= @shipping_address.apartment %><br>
  <%= @shipping_address.city %>, <%= @shipping_address.state %> <%= @shipping_address.zipcode %><br>
  <%= @shipping_address.country %><br>
  <%= @shipping_address.phone_number %>
</p>

<hr>
<%= form_with model: @shipping_address, url: update_shipping_address_users_path, method: :patch, local: true do |f| %>
  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :apartment %><br />
    <%= f.text_field :apartment%>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city%>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode %>
  </div>

  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>
<br />
  <%= f.submit 'Update Shipping Address'%>
<% end %>

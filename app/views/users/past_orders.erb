<h1>Past Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order Number</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_number %></td>
        <td><%= order.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td><%= link_to 'View Order', order_path(order), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

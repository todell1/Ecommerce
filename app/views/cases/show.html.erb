<h1><%= @case.name %></h1>

<% if @case.image.attached? %>
    <%= image_tag @case.image, class: 'w-100', style: 'max-width: 20rem;'%>
<% end %>

<p>Price: $<%= @case.price %></p>


<%= form_with url: cart_items_path, method: :post, local: true do |f| %>
  <%= hidden_field_tag :type, 'Case' %>
  <%= hidden_field_tag :id, @case.id %>

  <div class="field"> 
    <%= f.label :quantity, 'Quantity' %>
    <%= f.number_field :quantity, value: 1, min: 1%>
  </div>
<br/>
  <%= f.submit 'Add to Cart', class: 'btn btn-primary' %>
<% end %>
<br/>
<p><%= link_to 'Back to Cases', cases_path, class: 'btn btn-primary' %></p>


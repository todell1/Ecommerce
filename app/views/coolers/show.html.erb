<h1><%= @cooler.name %></h1>

<% if @cooler.image.attached? %>
    <%= image_tag @cooler.image, class: 'w-100', style: 'max-width: 20rem;'%>
<% end %>

<p>Price: $<%= @cooler.price %></p>


<p>Socket: <%= @cooler.socket %></p>
<p>Height: <%= @cooler.height %>mm</p>

<%= form_with url: cart_items_path, method: :post, local: true do |f| %>
  <%= hidden_field_tag :type, 'Cooler' %>
  <%= hidden_field_tag :id, @cooler.id %>

  <div class="field">
    <%= label_tag :quantity, 'Quantity' %> <br />
    <%= number_field_tag :quantity, 1, min: 1 %>
  </div>
<br />
  <div class="form-group">
    <%= f.submit 'Add to Cart', class: 'btn btn-primary' %>
  </div>
<% end %>
<br />
<p><%= link_to 'Back to Coolers', coolers_path, class: 'btn btn-primary' %></p>

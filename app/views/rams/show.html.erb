<h1><%= @ram.name %></h1>

<% if @ram.image.attached? %>
    <%= image_tag @ram.image, class: 'w-100', style: 'max-width: 20rem;'%>
<% end %>

<p>Price: $<%= @ram.price %></p>


<p>Height: <%= @ram.height %>mm</p>

<%= form_with url: cart_items_path, method: :post, local: true do |f| %>
  <%= hidden_field_tag :type, 'Ram' %>
  <%= hidden_field_tag :id, @ram.id %>

  <div class="field">
    <%= label_tag :quantity, 'Quantity' %><br/>
    <%= number_field_tag :quantity, 1, min: 1%>
  </div>

  <div class="form-group"><br/>
    <%= f.submit 'Add to Cart', class: 'btn btn-primary' %>
  </div>
<% end %>
<br/>
<p><%= link_to 'Back to RAM', rams_path, class: 'btn btn-primary'  %></p>
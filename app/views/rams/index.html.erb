<h1>RAM</h1>
<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @rams.each do |ram| %>
      <tr>
        <td><%= link_to ram.name, ram_path(ram) %></td>
        <td><%= ram.price %></td>
        <td class="d-flex">
          <%= form_with url: cart_items_path, method: :post, local: true, class: "d-inline" do |f| %>
            <%= hidden_field_tag :type, 'Ram' %>
            <%= hidden_field_tag :id, ram.id %>
            <%= hidden_field_tag :quantity, 1 %>
            <div class="form-group mr-2">
              <%= label_tag :quantity, 'Quantity' %>
              <%= number_field_tag :quantity, 1, min: 1, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.submit 'Add to Cart', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
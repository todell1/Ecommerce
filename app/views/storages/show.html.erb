<h1><%= @storage.name %></h1>

<% if @storage.image.attached? %>
    <%= image_tag @storage.image, class: 'w-100', style: 'max-width: 20rem;'%>
<% end %>

<p>Price: $<%= @storage.price %></p>


<p>Storage Type: <%= @storage.storage_type %></p>
<p><%= @storage.gen %></p>
<p>Storage Size: <%= @storage.storage_size %></p>
<p>Storage Speed: <%= @storage.speed %> MB/s</p>

<%= form_with url: cart_items_path, method: :post, local: false do |f| %>
  <%= hidden_field_tag :type, 'Storage' %>
  <%= hidden_field_tag :id, @storage.id %>

  <div class="field">
    <%= label_tag :quantity, 'Quantity' %><br />
    <%= number_field_tag :quantity, 1, min: 1%>
  </div>

  <div class="field">
    <%= f.submit 'Add to Cart', class: 'btn btn-primary' %><br />
  </div>
<% end %>
<br />
<p><%= link_to 'Back to Storages', storages_path, class: 'btn btn-primary' %></p>

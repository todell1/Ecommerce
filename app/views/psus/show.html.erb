<h1><%= @psu.name %></h1>

<% if @psu.image.attached? %>
    <%= image_tag @psu.image, class: 'w-100', style: 'max-width: 20rem;'%>
<% end %>

<p>Price: $<%= @psu.price %></p>


<p>Wattage: <%= @psu.wattage %>W</p>
<p>Efficiency: <%= @psu.efficiency %></p>
<p>Form: <%= @psu.form %></p>

<%= form_with url: cart_items_path, method: :post, local: true do |f| %>
  <%= hidden_field_tag :type, 'Psu' %>
  <%= hidden_field_tag :id, @psu.id %>

  <div class="field">
    <%= label_tag :quantity, 'Quantity' %><br />
    <%= number_field_tag :quantity, 1, min: 1 %>
  </div>

  <div class="field"><br />
    <%= f.submit 'Add to Cart', class: 'btn btn-primary' %>
  </div>
<% end %>
<br />
<p><%= link_to 'Back to PSUs', psus_path, class: 'btn btn-primary' %></p>
